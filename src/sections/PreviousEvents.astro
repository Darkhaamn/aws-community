---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
  CardFooter,
} from "@/components/ui/card";
import { Image } from "astro:assets";
import { CalendarDays, ArrowRight } from "lucide-react";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";

const data = [
  {
    image: "https://blog.aws.mn/content/images/size/w2000/2024/06/DSC08056.jpg",
    title: "2024 - AWS Community Day Ulaanbaatar",
    date: "June 14, 2024",
    description:
      "Explore our 2024 AWS Community Event in Ulaanbaatar. Featuring workshops, keynotes, and networking opportunities.",
    href: "https://2024.aws.mn/",
  },
  {
    image: "https://blog.aws.mn/content/images/size/w2000/2023/06/DSC03890.jpg",
    title: "2023 - AWS Community Day Ulaanbaatar",
    date: "June 19, 2023",
    description:
      "Explore our 2023 AWS Community Event in Ulaanbaatar. Featuring workshops, keynotes, and networking opportunities.",
    href: "https://2023.aws.mn/",
  },
];
---

<section id="previous" class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <div
          class="inline-block rounded-lg bg-orange-100 px-3 py-1 text-sm text-orange-800 dark:bg-orange-900/30 dark:text-orange-300"
        >
          Past Events
        </div>
        <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
          Previous Events
        </h2>
        <p
          class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          Explore our past events and catch up on what you might have missed.
        </p>
      </div>
    </div>
    <div class="mx-auto grid max-w-5xl gap-8 py-12 md:grid-cols-2 lg:gap-12">
      {
        data.map((item) => (
          <Card className="overflow-hidden pt-0 gap-4 border-0 bg-background shadow-lg dark:shadow-orange-900/5 dark:bg-card/80 group">
            <CardHeader className="p-0">
              <div class="relative overflow-hidden">
                <Image
                  width={400}
                  height={200}
                  alt={item.title}
                  src={item.image}
                  class="aspect-video w-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10" />
                <div class="absolute bottom-3 left-3 z-20">
                  <div class="flex items-center text-xs text-white/90">
                    <CalendarDays className="mr-1 h-3 w-3" />
                    <span>{item.date}</span>
                  </div>
                </div>
              </div>
            </CardHeader>
            <CardContent>
              <CardTitle className="text-lg">{item.title}</CardTitle>
              <CardDescription className="mt-2">
                {item.description}
              </CardDescription>
            </CardContent>
            <CardFooter className="mt-auto flex justify-between">
              <a
                target="_blank"
                referrerpolicy="no-referrer"
                href={item.href}
                class={cn(
                  buttonVariants({
                    size: "sm",
                    variant: "ghost",
                    className:
                      "text-orange-600 hover:text-orange-700 hover:bg-orange-50 dark:text-orange-400 dark:hover:text-orange-300 dark:hover:bg-orange-900/20",
                  }),
                )}
              >
                Read More <ArrowRight className="ml-2 h-4 w-4" />
              </a>
            </CardFooter>
          </Card>
        ))
      }
    </div>
  </div>
</section>
